@page "/nitroxcalculator"

<h1>Nitrox Calculator</h1>

<div class="row">
    <div class="col-sm-4 col-lg-3 rightAlign">Starting Pressure:</div><div class="col-sm-7 col-md-6"><input class="fullWidth" @bind=startPressure type="number" min=0 /></div>
</div>
<div class="row">
    <div class="col-sm-4 col-lg-3 rightAlign">Maximum Oxygen Pressure:</div><div class="col-sm-7 col-md-6"><input class="fullWidth" @bind=maxO2Pressure type="number" min=0 /></div>
</div>
<div class="row">
    <div class="col-sm-4 col-lg-3 rightAlign">Starting Mix:</div><div class="col-sm-7 col-md-6"><input class="fullWidth" @bind=startMix type="number" min=0 /> </div>
</div>
<br />
<div class="row">
    <div class="col-sm-4 col-lg-3 rightAlign">Ending Pressure:</div><div class="col-sm-7 col-md-6"><input class="fullWidth" @bind=endPressure type="number" min=0 /></div>
</div>
<div class="row">
    <div class="col-sm-4 col-lg-3 rightAlign">Ending Mix:</div><div class="col-sm-7 col-md-6"><input class="fullWidth" @bind=endMix type="number" min=0 /> </div>
</div>
<br />
<button class="btn btn-primary" @onclick="CalculateMix">Calculate</button>

<br />
<br />
<p>@output</p>
